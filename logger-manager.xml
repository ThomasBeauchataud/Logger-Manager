<?xml version="1.0"?>

<logger>

    <traceable>
        <loader-class>com.github.ffcfalcos.logger.trace.FileWatcherRulesLoader</loader-class>
        <storage-handler-class>com.github.ffcfalcos.logger.trace.CsvRulesStorageHandler</storage-handler-class>
    </traceable>

    <parameters>
        <file-persisting-handler-path>/default-log.log</file-persisting-handler-path>
        <csv-rules-storage-handler-path>/rules.csv</csv-rules-storage-handler-path>
        <rabbitMQ-persisting-handler>
            <rabbitMQ-host>localhost</rabbitMQ-host>
            <rabbitMQ-user>guest</rabbitMQ-user>
            <rabbitMQ-password>guest</rabbitMQ-password>
            <rabbitMQ-exchange>COMMON</rabbitMQ-exchange>
            <rabbitMQ-routingKey>*</rabbitMQ-routingKey>
        </rabbitMQ-persisting-handler>
    </parameters>

    <persisting-handlers>
        <persisting-handler>com.github.ffcfalcos.logger.PersistingHandlerTest</persisting-handler>
    </persisting-handlers>

    <formatter-handlers>
        <formatter-handler>com.github.ffcfalcos.logger.FormatterHandlerTest</formatter-handler>
    </formatter-handlers>

</logger>